{
	"coc.preferences.extensionUpdateCheck":"daily",
	"coc.preferences.formatOnSaveFiletypes": ["c","cpp","java"],
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"rootPatterns": ["compile_flags.txt", "compile_commands.json",".git",".svn",".root"],
			"filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": ["dockerfile"],
			"args": ["--stdio"]
		}
	}
}
